
<%= simple_form_for(@out_note) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :note_number %>
    <%= f.input :reference %>
    <%= f.input :zonal_pass %>
    <%= f.input :subse_number %>
    <%= f.input :entry_date %>
    <%= f.input :out_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
