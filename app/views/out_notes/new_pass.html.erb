<%= render 'header' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %> Nuevo pase saliente
          <%= link_to out_notes_path, class: 'btn pull-right close-btn' do %>
            <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
          <% end %>
        </h3>
      </div>
      <div class="panel-body" id="panel-body-new">
        <%= render 'pass_form', out_note: @out_note %>
      </div>
      <div class="panel-footer text-right">
        <%= link_to 'Volver', out_notes_path, class: 'btn' %>
        <button type='submit' name='commit' class='btn btn-primary' form='out_note_form'>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-check') %> Cargar pase
        </button>
      </div>
    </div>
  </div>
</div>