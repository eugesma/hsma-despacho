// Add the dialog title
$('#dialog h3').html("<i class=' glyphicon glyphicon-pencil'></i>  Editando nota saliente");

// Render the edit form
$('.modal-body').html('<%= j render("form") %>');

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<button type='submit' name='commit' class='btn btn-primary pull-right' form='edit_out_note_<%=@out_note.id%>' value='Guardar cambios'>Guardar cambios</button>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
  $('#out_note_note_number').focus();
});

<%= render 'form_function' %>

$('#out_note_entry_date').val("<%= @out_note.entry_date.strftime('%d/%m/%Y') %>");
$('#out_note_out_date').val("<%= @out_note.out_date.strftime('%d/%m/%Y') %>");
