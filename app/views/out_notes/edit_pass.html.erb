<%= render 'header' %>

<div class="card">
  <div class="card-header bg-warning d-flex justify-content-between align-items-center">
    <h6 class="card-title mb-0 pl-2">
      <%= fa_icon "pen" %> Editando pase saliente
    </h6>
    <%= link_to out_notes_path, class: 'btn close-btn' do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
  <div class="card-body full-height">
    <%= render 'pass_form', out_note: @out_note %>
  </div>
  <div class="card-footer text-right">
    <%= link_to 'Volver', out_notes_path, class: 'btn btn-light mr-2' %>
    <button type='submit' name='commit' class='btn btn-success' form='out_note_form'>
      <%= fa_icon "save" %> Guardar cambios
    </button>
  </div>
</div>