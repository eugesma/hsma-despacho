<%= render 'header' %>

<div class="card">
  <div class="card-header bg-primary text-white">
    <h3 class="card-title">
      <%= fa_icon "plus" %> Nuevo pase entrante
      <%= link_to entry_notes_path, class: 'btn text-white float-right close-btn' do %>
        <%= fa_icon "times" %>
      <% end %>
    </h3>
  </div>
  <div class="card-body full-height">
    <%= render 'pass_form', entry_note: @entry_note %>
  </div>
  <div class="card-footer text-right">
    <%= link_to 'Volver', entry_notes_path, class: 'btn btn-light mr-2' %>
    <button type='submit' name='commit' class='btn btn-primary' form='entry_note_form'>
      <%= fa_icon "check" %> Cargar pase
    </button>
  </div>
</div>