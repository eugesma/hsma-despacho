<%= render 'header' %>

<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= content_tag(:span, '', class: 'glyphicon glyphicon-edit') %> Editando pase entrante
      <%= link_to entry_notes_path, class: 'btn pull-right close-btn' do %>
        <%= fa_icon "times" %>
      <% end %>
    </h3>
  </div>
  <div class="panel-body full-height">
    <%= render 'pass_form', entry_note: @entry_note %>
  </div>
  <div class="panel-footer text-right">
    <%= link_to 'Volver', entry_notes_path, class: 'btn' %>
    <button type='submit' name='commit' class='btn btn-primary' form='entry_note_form'>
      <%= content_tag(:span, '', class: 'glyphicon glyphicon-check') %> Guardar cambios
    </button>
  </div>
</div>