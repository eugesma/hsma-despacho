<style>
body {
   background-image: url("<%= asset_path('bg-sifaho.jpg') %>");
}
</style>
<br>
<div class="row justify-content-center">
  <div class="col-3">
    <div class="card">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <div class="card-header text-center bg-dark text-white">
          <%= image_tag('despacho.png', alt: "Logo Despacho", class: "text-center")%>
        </div>
        <%= devise_error_messages! %>
        <div class="card-body">
          <div class="form-group">
            <%- if devise_mapping.registerable? %>
              <%= link_to 'Registrarse', new_registration_path(resource_name), class: 'right'  %>
            <% end -%>
            <%= f.label 'Usuario' %>
            <%= f.text_field :username, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%- if devise_mapping.recoverable? %>
              <%= link_to "Olvidaste tu contraseña?", new_password_path(resource_name), class: 'right' %>
            <% end -%>
            <%= f.label 'Contraseña' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <%= f.submit 'Iniciar sesión', class: 'btn btn-success btn-md btn-block', id: 'login-btn', data: { disable_with: "Iniciando..." } %>
        </div>
      <% end %>
    </div>
  </div>
</div>