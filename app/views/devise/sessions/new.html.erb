<style>
body {
   background-image: url("<%= asset_path('bg-sifaho.jpg') %>");
}
</style>
<br>
<div class="row justify-content-center">
  <div class="col-2">
    <div class="card">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <div class="card-header text-center">
          <%= image_tag("LogoHSMA.png", size: "70x70", alt: "Logo HSMA", class: "text-center") %>
          <br>
          <h3>Iniciar sesi칩n</h3>
        </div>
        <%= devise_error_messages! %>
        <div class="card-body">
          <div class="form-group">
            <%- if devise_mapping.registerable? %>
              <%= link_to 'Registrarse', new_registration_path(resource_name), class: 'right'  %>
            <% end -%>
            <%= f.label 'Usuario' %>
            <%= f.text_field :username, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%- if devise_mapping.recoverable? %>
              <%= link_to "Olvidaste tu contrase침a?", new_password_path(resource_name), class: 'right' %>
            <% end -%>
            <%= f.label 'Contrase침a' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <%= f.submit 'Iniciar sesi칩n', class: 'btn btn-success btn-md', id: 'login-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>