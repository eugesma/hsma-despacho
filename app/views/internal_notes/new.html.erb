<%= render 'header' %>

<div class="card">
  <div class="card-header bg-primary text-white">
    <h5 class="card-title">
      <%= fa_icon "plus" %> Nueva nota interna
      <%= link_to internal_notes_path, class: 'btn text-white float-right close-btn' do %>
        <%= fa_icon "times" %>
      <% end %>
    </h3>
  </div>
  <div class="card-body full-height">
    <%= render 'form', internal_note: @internal_note %>
  </div>
  <div class="card-footer text-right">
    <%= link_to 'Volver', internal_notes_path, class: 'btn btn-light mr-2' %>
    <button type='submit' name='commit' class='btn btn-primary' form='internal_note_form'>
      <%= fa_icon "check" %> Cargar nota
    </button>
  </div>
</div>