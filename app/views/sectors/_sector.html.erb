<tr id="sector_<%= sector.id %>">
  <td><%= sector.sector_name %></td>
  <td class="ref-col"><%= sector.description %></td>
  <td>
    <span class="label label-<%= sector.count_entry_label %>">
      <%= sector.entry_notes_count %>
    </span>
  </td>
  <td>
    <span class="label label-<%= sector.count_out_label %>">
      <%= sector.out_notes_count %>
    </span>
  </td>
  <td><%= sector.created_at.strftime("%d/%m/%y %H:%M") %></td>
  <td><%= sector.updated_at.strftime("%d/%m/%y %H:%M") %><td>
  <td>
    <%= link_to sector_path(sector), remote:true,
          class: 'btn btn-default btn-xs', title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top' } do %>
      <%= content_tag(:span, '', class: 'glyphicon glyphicon-eye-open') %>
    <% end %>
    <% if policy(sector).edit? %>
      <%= link_to edit_sector_path(sector), remote: true,
            class: 'btn btn-warning btn-xs', title: 'Editar', data: { toggle: 'tooltip', placement: 'top' } do %>
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-edit') %>
      <% end %>
    <% end %>
    <% if policy(sector).delete? %>
      <%= link_to delete_sector_path(sector), remote: true,
            class: 'btn btn-danger btn-xs', title: 'Borrar', data: { toggle: 'tooltip', placement: 'top' } do %>
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-trash') %>
      <% end %>
    <% end %>
  </td>
</tr>
