// Style modal
$('.modal-header').addClass('bg-primary');
$('.modal-header').addClass('text-white');

// Add the dialog title
$('#dialog h5').html("<i class='fa fa-plus'></i>  Nuevo sector");

// Render the edit form
$('.modal-body').html('<%= j render("form") %>');

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn btn-light pull-left' data-dismiss='modal'>Volver</button>"+
  "<button type='submit' name='commit' class='btn btn-primary pull-right' form='new_sector'><i class='fa fa-check'></i> Cargar sector</button>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

$('#dialog').on('shown.bs.modal', function () {
  $('#sector_sector_name').focus();
});

// Remove style
$('#dialog').on('hidden.bs.modal', function () {
  $('.modal-header').removeClass('bg-primary');
  $('.modal-header').removeClass('text-white');
});